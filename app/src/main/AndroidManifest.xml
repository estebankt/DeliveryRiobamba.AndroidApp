<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyecto_login">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:background="@color/colorPrimaryDark"
        android:icon="@mipmap/ic_launcher"
        android:label="RiobambaDelivery"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UserInterface.ProfileActivity"></activity>
        <activity android:name=".UserInterface.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".UserInterface.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".UserInterface.MenuActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.proyecto_login.UserInterface.MenuActivity" />
        </activity>
        <activity
            android:name=".UserInterface.ProductDetailActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserInterface.CategoriesActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserInterface.RestaurantsFilteredActivity"
            android:parentActivityName=".UserInterface.CategoriesActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserInterface.ShoppingCartActivity"
            android:parentActivityName=".UserInterface.MenuActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".UserInterface.RestaurantListProductsActivity"
            android:parentActivityName=".UserInterface.MenuActivity"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserInterface.LogInActivity"
            android:label="@string/title_activity_menu"
            android:parentActivityName=".UserInterface.LogInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInterface.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>